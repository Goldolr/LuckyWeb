@model LuckyWeb.Models.Prueba

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-image:url(https://image.freepik.com/vector-gratis/perro-gato-pug-hueso-espinas-pescado-huellas-pata-fondo-vector-patron-transparente-bola_7688-21.jpg);">
</body>
<div class="card" style="margin:auto;width:600px;background-color:antiquewhite">
    <h1 class="card-header info-color white-text text-center py-4" style="background-color:burlywood">
        <strong>Crear Informe</strong>
    </h1>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

        <hr />
        @*<div class="row">*@
        @*<div class="col-md-4">*@
        <!-- Form -->
        <form asp-action="Create" class="text-center" style="color: #757575;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin:auto;width:300px;">
                <label asp-for="IDentrevista" class="control-label"></label>
                <select asp-for="IDentrevista" class="form-control" asp-items="ViewBag.IDentrevista"></select>
            </div>
            <div class="form-group form-check" style="margin:auto;width:300px;">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoPrueba" /> @Html.DisplayNameFor(model => model.EstadoPrueba)
                </label>
            </div>
            <div class="form-group" style="margin:auto;width:300px;">
                <input type="submit" value="Create" class="btn btn-outline-dark btn-rounded btn-block my-4 waves-effect z-depth-0" />
            </div>
        </form>

        <div>
            <a asp-action="Index">Atrás</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
