@model IEnumerable<LuckyWeb.Models.FormularioEncuesta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <body style="background-color:#6B7A8F">
        <div class="card">
            <div id="table" class="table-editable">
                <h2 class="card-header text-center font-weight-bold text-uppercase py-4">Encuesta</h2>
                <p>
                    <a class="btn btn-danger btn-rounded btn-sm my-0" asp-action="Create">Pendientes</a>
                </p>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FK_UserFormularioEncuesta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FK_MascotaFormularioEncuesta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FK_PreguntaFormularioEncuesta)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FK_UserFormularioEncuesta.Apellido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FK_MascotaFormularioEncuesta.NombreMascota)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FK_PreguntaFormularioEncuesta.IDpreguntas)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IDformularioEncuesta">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.IDformularioEncuesta">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IDformularioEncuesta">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</body>