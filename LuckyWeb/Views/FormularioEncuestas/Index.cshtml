@model IEnumerable<LuckyWeb.Models.FormularioEncuesta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-outline-info btn-floating" asp-action="Create">Agregar nueva mascota </a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FK_UserFormularioEncuesta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FK_MascotaFormularioEncuesta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FK_UserFormularioEncuesta.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FK_MascotaFormularioEncuesta.NombreMascota)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.IDformularioEncuesta">Editar</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IDformularioEncuesta">Detalles</a>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                    Eliminar
                </button>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <h5 style="color:black">Seguro que desea eliminar este registro</h5>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IDformularioEncuesta">Si</a>

                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
