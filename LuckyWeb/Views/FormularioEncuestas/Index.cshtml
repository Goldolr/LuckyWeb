@model IEnumerable<LuckyWeb.Models.FormularioEncuesta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-color:#6B7A8F">
    <div class="card">
        <div id="table" class="table-editable">
            <h2 class="card-header text-center font-weight-bold text-uppercase py-4">Encuesta</h2>

            <p>
                <a class="btn btn-danger btn-rounded btn-sm my-0" asp-action="Create">Pendientes</a>
            </p>
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FK_UserFormularioEncuesta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FK_MascotaFormularioEncuesta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FK_PreguntaFormularioEncuesta)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FK_UserFormularioEncuesta.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FK_MascotaFormularioEncuesta.NombreMascota)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FK_PreguntaFormularioEncuesta.Pregunta1)
                                </td>
                                <td>
                                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.IDformularioEncuesta">Editar</a>
                                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IDformularioEncuesta">Detailles</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IDformularioEncuesta">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>