@using Microsoft.AspNetCore.Identity
@using LuckyWeb.Areas.Identity.Data
@inject SignInManager<LuckyWebUser> SignInManager
@inject UserManager<LuckyWebUser> UserManager

    <ul class="navbar-nav nav-left">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="btn btn-dark">Logout</button>
                </form>
            </li>
            @if (User.IsInRole("Administrador"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Mascotas" asp-action="Index">Perros</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Mascotas" asp-action="Index">Gatos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Usuarios</a>
                </li>
            }
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Mascotas" asp-action="Index">Perros</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Mascotas" asp-action="Index">Gatos</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
            </li>
        }
    </ul>
