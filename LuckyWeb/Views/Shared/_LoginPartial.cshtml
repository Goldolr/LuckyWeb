@using Microsoft.AspNetCore.Identity
@using LuckyWeb.Areas.Identity.Data
@inject SignInManager<LuckyWebUser> SignInManager
@inject UserManager<LuckyWebUser> UserManager

<div class="container">
    <div class="row justify-content-end">
        <ul class="navbar-nav">

            @if (SignInManager.IsSignedIn(User))
            {

                <li class="nav-item">
                    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola @UserManager.GetUserName(User)</a>
                </li>
                @*<li class="nav-item">
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="btn btn-dark">Logout</button>
                        </form>
                    </li>*@

                @if (User.IsInRole("Administrador"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Bajen prros</a>
                        <div class="dropdown-menu dropdown-primary" aria-labelledby="navbarDropdownMenuLink">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Agenda" asp-action="Index">Agenda</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Entregas" asp-action="Index">Entrega</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Entrevistas" asp-action="Index">Entrevistas</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="FormularioEncuestas" asp-action="Index">Encuestas</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Informes" asp-action="Index">Informe</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Preguntas" asp-action="Index">Preguntas</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pruebas" asp-action="Index">Prueba</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Mascotas" asp-action="Index">Catalogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="btn btn-dark">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Mascotas" asp-action="Index">Catalogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Preguntas" asp-action="Index">Deseas ADOPTAR?</a>
                    </li>
                    <li class="nav-item">
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="btn btn-dark">Logout</button>
                        </form>
                    </li>
                }
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Preguntas" asp-action="Index">Deseas ADOPTAR?</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Mascotas" asp-action="Index">Mascotas</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
                </li>
            }
        </ul>
    </div>
</div>