@page
@model LoginModel

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-lg-12 text-center">
      
        <div class="jumbotron card card-img " style="background-image:url(https://www.kienyke.com/wp-content/uploads/2018/10/huella-de-perro.jpg);">
            <h1 style="color:aqua">Bienvenido</h1>
            <form class="login100-form validate-form" id="account" method="post">
                <span class="login100-form-avatar">
                    <img src="~/login/images/login.jpg" alt="AVATAR">
                </span>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="margin:auto;width:300px;">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin:auto;width:300px;">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn purple-gradient btn-rounded mb-4" style="background-color:goldenrod">Iniciar</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">No tienes una cuenta? Registrate</a>
                    </p>
                </div>
            </form>
        </div>


    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
